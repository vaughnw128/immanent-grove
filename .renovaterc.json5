{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  extends: [
    "config:recommended",
    "docker:enableMajor",
    "helpers:pinGitHubActionDigests",
    ":automergeBranch",
    ":disableRateLimiting",
    ":dependencyDashboard",
    ":semanticCommits",
    ":timezone(America/New_York)",
  ],
  dependencyDashboardTitle: "Renovate Dashboard",
  suppressNotifications: [
    "prEditedNotification",
    "prIgnoreNotification",
  ],
  ignorePaths: [
    "**/*.sops.*",
    "cluster-bootstrap/*",
    "test-applications/*"
  ],
  flux: {
      "managerFilePatterns": [
        "/applications/.+\\.yaml$/",
        "/cluster/.+\\.yaml$/",
        "/infrastructure/.+\\.yaml$/",
      ]
  },
}